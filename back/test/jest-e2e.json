{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1",
    "^@shared/(.*)$": "<rootDir>/../node_modules/shared/dist/$1",
    "^shared$": "<rootDir>/../node_modules/shared/dist"
  },
  "setupFilesAfterEnv": ["<rootDir>/setup-e2e.ts"]
}
